<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/sing_up_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/splash_back"
        android:clipToPadding="true"
        tools:viewBindingIgnore="true"
        tools:context=".ui.sign_in_screen.fragments.SingIn.SingIn">

        <Button
            android:id="@+id/createAccountBtn2"
            style="@style/ElevatedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="18dp"
            android:backgroundTint="#121212"
            android:elevation="4dp"
            android:fontFamily="@font/habibi"
            android:text="Create Account"
            android:textColor="@color/white1"
            android:textSize="16dp"
            app:elevation="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/passTextInputLayout"
            app:layout_constraintVertical_bias="0.0" />

        <LinearLayout
            android:id="@+id/separator_OR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="18dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logInBtn"
            app:layout_constraintVertical_bias="0.0">

            <View
                android:layout_width="0dp"
                android:layout_height="1.5dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="18dp"
                android:layout_weight="1"
                android:background="#070707"
                android:backgroundTint="@color/black" />

            <TextView
                android:id="@+id/text_separet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/habibi"
                android:text="OR"
                android:textColor="#333333"
                android:textSize="16dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="1.5dp"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="25dp"
                android:layout_weight="1"
                android:background="#070707"
                android:backgroundTint="@color/black" />
        </LinearLayout>

        <Button
            android:id="@+id/logInBtn"
            style="@style/OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="18dp"
            android:backgroundTint="#D6CEC6"
            android:fontFamily="@font/habibi"
            android:text="Sign-In Now"
            android:textColor="#121212"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/separator_AHA"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="TouchTargetSizeCheck" />

        <!-- TODO: Убери googleSingUpBtn и откорректируй макет. Регистрации с помошью Google не может быть-->
        <Button
            android:id="@+id/googleSingUpBtn"
            style="@style/OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="18dp"
            android:backgroundTint="#D6CEC6"
            android:drawableLeft="@drawable/ic_google_logo"
            android:drawablePadding="15dp"
            android:fontFamily="@font/habibi"
            android:paddingLeft="70dp"
            android:text="Sign-Up with Google"
            android:textAlignment="textStart"
            android:textColor="#121212"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/separator_OR"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="TouchTargetSizeCheck" />

        <LinearLayout
            android:id="@+id/separator_AHA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="18dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/createAccountBtn2"
            app:layout_constraintVertical_bias="0.0">

            <View
                android:layout_width="0dp"
                android:layout_height="1.5dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="18dp"
                android:layout_weight="1"
                android:background="#070707"
                android:backgroundTint="@color/black" />

            <TextView
                android:id="@+id/text_separet_or"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/habibi"
                android:text="Already have an account?"
                android:textColor="#333333"
                android:textSize="16dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="1.5dp"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:background="#070707"
                android:backgroundTint="@color/black" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="290dp"
            android:layout_height="266dp"
            android:layout_marginTop="5dp"
            android:contentDescription="register_logo"
            android:src="@drawable/ic_register"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutName"
            style="@style/RoundedTextInputLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="18dp"
            app:helperTextEnabled="true"
            app:helperText="For example: Examply Exampleton"
            app:helperTextTextColor="#B1763E"
            app:endIconMode="clear_text"
            app:hintTextAppearance="@style/CustomHintText"
            app:hintTextColor="@color/hint_color"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            app:layout_constraintVertical_bias="0.0"
            app:placeholderText="First and last name"
            app:startIconDrawable="@drawable/ic_person">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/nameTexInp2"
                style="@style/CustomTextInputEditText"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_gravity="top"
                android:gravity="start|center"
                android:hint="Name"
                android:inputType="text|textPersonName"
                android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/emailTextInputLayout"
            style="@style/RoundedTextInputLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="18dp"
            app:helperTextEnabled="true"
            app:helperText="For example: examply.exampleton@example.com"
            app:helperTextTextColor="#B1763E"
            app:endIconMode="clear_text"
            app:hintTextAppearance="@style/CustomHintText"
            app:hintTextColor="@color/hint_color"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayoutName"
            app:layout_constraintVertical_bias="0.0"
            app:placeholderText="Your e-mail address"
            app:startIconDrawable="@drawable/ic_email">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/emailRegisterTexInp2"
                style="@style/CustomTextInputEditText"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_gravity="top"
                android:gravity="start|center"
                android:hint="E-mail"
                android:inputType="text|textEmailAddress"
                android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/passTextInputLayout"
            style="@style/RoundedTextInputLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="18dp"
            app:helperTextEnabled="true"
            app:helperText="For example: ExAmPlEpaSsWoRd"
            app:helperTextTextColor="#B1763E"
            app:counterEnabled="true"
            app:counterMaxLength="15"
            app:endIconMode="password_toggle"
            app:hintTextAppearance="@style/CustomHintText"
            app:hintTextColor="@color/hint_color"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/emailTextInputLayout"
            app:layout_constraintVertical_bias="0.0"
            app:placeholderText="Create a password"
            app:startIconDrawable="@drawable/ic_lock">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/passRegisterTexImp2"
                style="@style/CustomTextInputEditText"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_gravity="top"
                android:fontFamily="sans-serif"
                android:gravity="start|center"
                android:hint="Password"
                android:inputType="text|textPassword"
                android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>